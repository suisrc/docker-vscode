## x. ccc 安装软件
ARG BASE_IMAGE_TAG

FROM ghcr.io/suisrc/webtop:xfce-vscode-${BASE_IMAGE_TAG}
# ================================================================

USER $USER
RUN sudo add-msedge && sudo fix-mchina &&\
    sudo apt-get autoremove && sudo apt-get clean && \
    sudo rm -rf /tmp/* /var/tmp/* /var/lib/apt/lists/*
USER root