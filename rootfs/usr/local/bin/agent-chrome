#!/usr/bin/bash

set -e

# 如果 $HOME/browsers/chrome 目录不存在，则创建
if [ ! -d "$HOME/browsers/chrome" ]; then
    mkdir -p $HOME/browsers/chrome
fi

google-chrome --user-data-dir=$HOME/browsers/chrome \
--window-position=0,0 \
--start-maximized \
--disable-dev-shm-usage \
--disable-gpu \
--disable-software-rasterizer \
--no-first-run \
--no-default-browser-check \
--no-experiments \
--remote-debugging-port=9222 \
--remote-debugging-address=0.0.0.0 \
"http://127.0.0.1:7788"
