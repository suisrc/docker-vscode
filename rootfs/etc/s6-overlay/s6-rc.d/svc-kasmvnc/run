#!/usr/bin/with-contenv with-user


if [[ "${SVC_KASM}" == "0" ]]; then
    echo 'disable kams[vnc] server ...'
    s6-svc -O exit
fi

# Pass gpu flags if mounted
if ls /dev/dri/renderD* 1> /dev/null 2>&1; then
  HW3D="-hw3d"
fi
if [ -z ${DRINODE+x} ]; then
  DRINODE="/dev/dri/renderD128"
fi

exec /usr/bin/Xvnc ${DISPLAY} \
    ${HW3D} \
    -PublicIP 127.0.0.1 \
    -drinode ${DRINODE} \
    -disableBasicAuth \
    -SecurityTypes None \
    -AlwaysShared \
    -http-header Cross-Origin-Embedder-Policy=require-corp \
    -http-header Cross-Origin-Opener-Policy=same-origin \
    -geometry 1024x768 \
    -sslOnly 0 \
    -RectThreads 0 \
    -websocketPort 6901 \
    -interface 0.0.0.0 \
    -Log *:stdout:10
