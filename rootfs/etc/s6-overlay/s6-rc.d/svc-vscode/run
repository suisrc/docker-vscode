#!/usr/bin/with-contenv with-user


if [[ "${SVC_VSCODE}" == "0" ]]; then
    # 需要等待注册 > /run/s6-rc/resolve.cdb
    sleep 3
    s6-rc stop svc-vscode
    echo 'disable vscode server ...'
    exit
fi

echo 'start vscode server ...'
## VSC_ARGS: vscode参数
code-server --host ${VSC_HOST:-0.0.0.0} --port ${VSC_PORT:-7000} $VSC_ARGS /wsc
