#!/bin/bash

# 为简化操作，修改权限的内容，在 svc-kasmvnc 中处理
# 更改权限，否则其他用户无法连接dbus, 这个必须的，所以不能使用--nofork参数
# sudo chmod a+r /run/dbus/system_bus_socket

# 处理默认bus， edge需要，其他应用不清楚
rm -f /run/dbus/system_bus_socket && mkdir -p /run/dbus/ 
# create a new session bus
exec /usr/bin/dbus-daemon --system --print-pid --nopidfile --nofork --address=unix:path=/run/dbus/system_bus_socket
