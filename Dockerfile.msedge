## x. ccc 安装软件
ARG BASE_IMAGE_TAG

# ${BASE_IMAGE_TAG} 基础镜像版本
FROM ghcr.io/suisrc/webtop:ms-vscpod-xa-2.3.5
# ================================================================

# copy rootfs，重复的文件覆盖
# COPY rootfs/ /

# 安装 msedge 浏览器
USER $USER
RUN sudo add-msedge && sudo fix-mchina &&\
    sudo apt-get autoremove && sudo apt-get clean && \
    sudo rm -rf /tmp/* /var/tmp/* /var/lib/apt/lists/*
USER root
